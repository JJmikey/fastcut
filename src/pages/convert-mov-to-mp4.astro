---
import MarketingLayout from '../layouts/MarketingLayout.astro';

// Features (‰øùÊåÅ‰∏çËÆä)
const features = [
  {
    title: "Universal Compatibility",
    desc: "Convert iPhone MOV (QuickTime) videos to MP4 (H.264), making them playable on Windows, Android, and older TVs.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-400"><rect width="20" height="14" x="2" y="3" rx="2"/><line x1="8" x2="16" y1="21" y2="21"/><line x1="12" x2="12" y1="17" y2="21"/></svg>`
  },
  {
    title: "Privacy First",
    desc: "Unlike other converters, we don't upload your files to a server. Conversion happens locally on your device.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/><path d="m9 12 2 2 4-4"/></svg>`
  },
  {
    title: "Edit Before Convert",
    desc: "Why just convert? You can also trim, crop, or add text to your MOV video before saving it as MP4.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-purple-400"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" x2="12" y1="15" y2="3"/></svg>`
  }
];

// üî• ÂÆöÁæ©Ê≠•È©üË≥áÊñô (Indigo Theme)
const steps = [
  {
    step: "01",
    title: "Launch Tool",
    desc: "Click 'Start Editing' to open the secure browser-based converter."
  },
  {
    step: "02",
    title: "Drop MOV File",
    desc: "Drag your iPhone video (.MOV) into the editor. It loads instantly."
  },
  {
    step: "03",
    title: "Edit (Optional)",
    desc: "Need to cut a part out? Trim or crop your video on the timeline before converting."
  },
  {
    step: "04",
    title: "Export MP4",
    desc: "Click Export. The engine automatically re-encodes it to H.264 MP4 for maximum compatibility."
  }
];

const pageTitle = "Convert MOV to MP4 Online - Free & No Upload | FastVideoCutter";
const pageDescription = "Convert iPhone MOV files to MP4 instantly in your browser. 100% client-side conversion means no uploading huge files. Fast, secure, and free.";

---

<MarketingLayout
  title={pageTitle}
  description={pageDescription} 
  heroBadge="Video Converter"
  heroTitle='Convert MOV to MP4 <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-indigo-500">Securely</span>'
  heroSubtitle="The safest way to convert iPhone MOV videos to MP4 format. No file upload required. Works directly in your browser."
  features={features}
>

  <!-- Content Block: Indigo/Blue Ê∑±Ëâ≤È¢®Ê†º -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-24">
    
    <div class="bg-[#0B1121] border border-slate-800 rounded-[2.5rem] p-8 md:p-16 relative overflow-hidden shadow-2xl">
      
      <!-- ËÉåÊôØÂÖâÊöà (Indigo Theme) -->
      <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-indigo-900/20 rounded-full blur-[120px] pointer-events-none -translate-y-1/2 translate-x-1/2"></div>
      <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-blue-900/10 rounded-full blur-[100px] pointer-events-none translate-y-1/3 -translate-x-1/4"></div>

      <div class="grid lg:grid-cols-2 gap-16 relative z-10">
        
        <!-- LEFT COLUMN: The "Why" & Comparison -->
        <div class="flex flex-col justify-center">
          
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-indigo-500/10 border border-indigo-500/20 w-fit mb-6">
             <span class="flex h-2 w-2 relative">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-indigo-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-indigo-500"></span>
             </span>
             <span class="text-xs font-bold text-indigo-300 tracking-wide uppercase">Universal Format</span>
          </div>

          <h2 class="text-3xl md:text-5xl font-extrabold text-white mb-6 leading-tight">
            Play your videos <br/>
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-indigo-400">everywhere.</span>
          </h2>

          <p class="text-lg text-slate-400 leading-relaxed mb-8">
            MOV files (Apple QuickTime) often struggle to play on Windows or Android. 
            <strong>MP4 (H.264)</strong> is the global standard. We fix compatibility issues instantly without risking your privacy.
          </p>

          <!-- Comparison Card (ÂéüÊú¨Âú®Â∫ïÈÉ®ÁöÑÂçÄÂ°äÁßªÂà∞ÈÄôË£°ÔºåË¶ñË¶∫ÂÑ™Âåñ) -->
          <div class="space-y-4">
            
            <!-- Bad Option -->
            <div class="flex items-start gap-4 p-4 rounded-xl bg-red-900/10 border border-red-500/10">
                <div class="shrink-0 mt-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-red-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="15" x2="9" y1="9" y2="15"/><line x1="9" x2="15" y1="9" y2="15"/></svg>
                </div>
                <div>
                    <h4 class="text-white font-bold text-sm">Traditional Converters</h4>
                    <p class="text-slate-400 text-xs mt-1">Slow uploads, long server wait times, and privacy risks.</p>
                </div>
            </div>

            <!-- Good Option -->
            <div class="flex items-start gap-4 p-4 rounded-xl bg-emerald-900/10 border border-emerald-500/20 relative overflow-hidden">
                <div class="absolute inset-0 bg-emerald-500/5 pointer-events-none"></div>
                <div class="shrink-0 mt-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-emerald-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></svg>
                </div>
                <div>
                    <h4 class="text-white font-bold text-sm">FastVideoCutter</h4>
                    <p class="text-slate-300 text-xs mt-1">Instant local processing. 100% Secure. No file size limits.</p>
                </div>
            </div>

          </div>

        </div>

        <!-- RIGHT COLUMN: Step Cards -->
        <div>
          <h3 class="text-2xl font-bold text-white mb-8 flex items-center gap-3">
            <span class="w-1.5 h-8 bg-gradient-to-b from-blue-400 to-indigo-600 rounded-full"></span>
            How to convert MOV to MP4 online?
          </h3>

          <div class="space-y-4">
            {steps.map((item) => (
              <div class="group relative bg-[#131B2E] hover:bg-[#1A2339] border border-slate-800/60 p-5 rounded-2xl transition-all duration-300 flex gap-5 items-start">
                
                <!-- Number Badge (Indigo Style) -->
                <div class="shrink-0 w-10 h-10 rounded-lg bg-indigo-500/10 text-indigo-400 flex items-center justify-center font-bold text-sm border border-indigo-500/20 mt-0.5 shadow-sm shadow-indigo-500/10">
                  {item.step}
                </div>

                <!-- Text Content -->
                <div>
                  <h4 class="text-lg font-bold text-white mb-1 group-hover:text-indigo-200 transition-colors">
                    {item.title}
                  </h4>
                  <p class="text-slate-400 text-sm leading-relaxed">
                    {item.desc}
                  </p>
                </div>

              </div>
            ))}
          </div>

          <!-- Action Button -->
          <div class="mt-8 text-right">
             <a href="/editor" class="inline-flex items-center gap-2 text-indigo-400 font-bold hover:text-indigo-300 transition-colors group">
                Start Converting
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
             </a>
          </div>

        </div>

      </div>
    </div>
  </div>

</MarketingLayout>