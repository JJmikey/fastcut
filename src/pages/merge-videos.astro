import MarketingLayout from '../layouts/MarketingLayout.astro';

const features = [
  {
    title: "Combine Clips",
    desc: "Join multiple video files into one single MP4. Supports MP4, MOV, WebM, and more.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-purple-400"><path d="M8 3H5a2 2 0 0 0-2 2v3m18 0V5a2 2 0 0 0-2-2h-3m0 18h3a2 2 0 0 0 2-2v-3M3 16v3a2 2 0 0 0 2 2h3"/><path d="M8 12h8"/><path d="M12 8v8"/></svg>`
  },
  {
    title: "Sequence Editor",
    desc: "Drag and drop to rearrange your clips on the timeline. Easy magnetic snapping ensures no gaps.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-cyan-400"><path d="M3 6h18"/><path d="M7 12h10"/><path d="M10 18h4"/></svg>`
  },
  {
    title: "Add Audio",
    desc: "Merge videos and replace the audio track with your own music or voiceover seamlessly.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400"><path d="M9 18V5l12-2v13"/><circle cx="6" cy="18" r="3"/><circle cx="18" cy="16" r="3"/></svg>`
  }
];
---

<MarketingLayout
  title="Merge Videos Online - Combine MP4 Clips for Free | FastVideoCutter"
  heroBadge="Video Merger"
  heroTitle='Merge & Combine Videos <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600">Instantly</span>'
  heroSubtitle="The easiest way to join multiple video clips into one file. Arrange order, add music, and export in 4K without uploading."
  features={features}
>

  <h2 class="text-2xl font-bold text-white mt-8 mb-4">How to merge videos online?</h2>
  <p class="text-gray-400 mb-6">
    Don't waste time uploading huge files just to stitch them together. 
    <strong>FastVideoCutter</strong> lets you combine unlimited video clips directly in your browser using WebCodecs technology.
  </p>

  <h3 class="text-xl font-bold text-white mt-8 mb-4">Step-by-step Guide</h3>
  <ol class="list-decimal pl-5 text-gray-400 space-y-2">
    <li>Click <strong>"Start Editing"</strong>.</li>
    <li>Upload all the video clips you want to merge using the <strong>"Import Media"</strong> button.</li>
    <li>Drag your clips onto the <strong>Main Track</strong> one by one.</li>
    <li>Drag clips left or right to <strong>rearrange</strong> their order. They will snap together automatically.</li>
    <li>(Optional) Add a background song on the Audio Track.</li>
    <li>Click <strong>Export</strong> to save the combined video as a single MP4 file.</li>
  </ol>

</MarketingLayout>