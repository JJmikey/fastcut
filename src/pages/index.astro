    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-cyan-400"><rect width="18" height="18" x="3" y="3" rx="2"/><path d="M9 9h6"/><path d="M9 15h6"/><path d="M15 9v6"/><path d="M9 9v6"/><path d="M3 9h-2"/><path d="M3 15h-2"/><path d="M21 9h2"/><path d="M21 15h2"/><path d="M9 3v-2"/><path d="M15 3v-2"/><path d="M9 21v2"/><path d="M15 21v2"/></svg>`
  },
  {
    title: "Local Privacy",
    desc: "Your videos are processed locally in your browser via WebCodecs. Sensitive footage never hits a server.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>`
