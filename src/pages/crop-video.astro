---
import MarketingLayout from '../layouts/MarketingLayout.astro';

const features = [
  {
    title: "Social Media Ready",
    desc: "Instantly resize videos for TikTok (9:16), Instagram (1:1), or YouTube (16:9) with one click.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-pink-500"><rect width="10" height="16" x="7" y="4" rx="2"/><path d="M11 17h2"/></svg>`
  },
  {
    title: "Zoom & Pan",
    desc: "Scale up your footage and reposition the frame to focus on the most important action.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-cyan-400"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/><path d="M11 8v6"/><path d="M8 11h6"/></svg>`
  },
  {
    title: "No Quality Loss",
    desc: "Crop and resize without blurry results. We process original high-quality footage directly in your browser.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/><path d="m9 12 2 2 4-4"/></svg>`
  }
];

// üî• ÂÆöÁæ©Ê≠•È©üË≥áÊñô (Áî®ÊñºÂè≥ÂÅ¥Âç°Áâá)
const steps = [
  {
    step: "01",
    title: "Import Video",
    desc: "Click 'Start Editing' and drag your video clip into the browser. No upload wait time."
  },
  {
    step: "02",
    title: "Select & Scale",
    desc: "Drag video to timeline. Use the 'Scale' slider in the right panel to zoom in on your subject."
  },
  {
    step: "03",
    title: "Change Aspect Ratio",
    desc: "Pick a preset like 9:16 (TikTok) or Custom. Adjust 'Position X/Y' to center the action perfectly."
  },
  {
    step: "04",
    title: "Instant Export",
    desc: "Check the preview and click Export. Your cropped video is saved immediately to your device."
  }
];

// üî• ÂÆöÁæ©ÊØî‰æãË≥áÊñô (Áî®ÊñºÂ∑¶ÂÅ¥Ê®ôÁ±§)
const ratios = [
  { label: "9:16 TikTok", color: "bg-pink-500" },
  { label: "1:1 Instagram", color: "bg-purple-500" },
  { label: "16:9 YouTube", color: "bg-blue-500" },
  { label: "4:5 Portrait", color: "bg-orange-500" },
];

const pageTitle = "Crop Video Online - Resize for TikTok & Insta | FastVideoCutter";
const pageDescription = "Crop your videos to 9:16, 1:1, or custom aspect ratios instantly. The fastest local video cropper that secures your privacy. No rendering wait time for uploads.";
---

<MarketingLayout
  title={pageTitle}
  description={pageDescription} 
  heroBadge="Video Cropper"
  heroTitle='Crop & Resize Videos <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-orange-400">Online</span>'
  heroSubtitle="The easiest way to change video aspect ratio. Crop MP4 videos for TikTok, Instagram Reels, and YouTube Shorts without watermarks."
  features={features}
>

  <!-- Content Block: ‰ªøÁÖßÂúñ 2 ÁöÑÊ∑±Ëâ≤Â§ßÂúìËßíÈ¢®Ê†º -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-24">
    
    <div class="bg-[#0B1121] border border-slate-800 rounded-[2.5rem] p-8 md:p-16 relative overflow-hidden shadow-2xl">
      
      <!-- ËÉåÊôØÂÖâÊöà (ÊîπÁî®Á≤âËâ≤Á≥ª‰ª•ÈÖçÂêàÈ†ÅÈù¢‰∏ªÈ°å) -->
      <div class="absolute top-0 left-0 w-[600px] h-[600px] bg-pink-900/10 rounded-full blur-[120px] pointer-events-none -translate-y-1/2 -translate-x-1/4"></div>

      <div class="grid lg:grid-cols-2 gap-16 relative z-10">
        
        <!-- LEFT COLUMN: The "Why" & Ratios -->
        <div class="flex flex-col justify-center">
          
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-pink-500/10 border border-pink-500/20 w-fit mb-6">
             <span class="flex h-2 w-2 relative">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-pink-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-pink-500"></span>
             </span>
             <span class="text-xs font-bold text-pink-300 tracking-wide uppercase">Content Repurposing</span>
          </div>

          <h2 class="text-3xl md:text-5xl font-extrabold text-white mb-6 leading-tight">
            Go Vertical.<br/>
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-orange-400">Go Viral.</span>
          </h2>

          <p class="text-lg text-slate-400 leading-relaxed mb-8">
            Don't let your landscape videos go to waste. With  <strong>FastVideoCutter</strong>, you can easily crop and resize your footage to fit vertical screens like TikTok, YouTube Shorts, and Instagram Stories. No complex software installation required.
            <br/><br/>
            Social media platforms favor vertical content (9:16). Cropping your landscape videos removes distractions and fills the phone screen, significantly increasing viewer engagement and watch time.
          </p>

          <!-- Supported Ratios Visuals -->
          <div class="bg-slate-900/50 border border-slate-800/80 rounded-2xl p-6">
            <h3 class="text-sm font-bold text-slate-300 uppercase tracking-wider mb-4">Supported Aspect Ratios</h3>
            <div class="flex flex-wrap gap-3">
              {ratios.map(r => (
                <span class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-slate-800 border border-slate-700 text-slate-200 text-sm font-medium">
                  <span class={`w-2 h-2 rounded-full ${r.color}`}></span>
                  {r.label}
                </span>
              ))}
              <span class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-slate-800/50 border border-slate-700 border-dashed text-slate-400 text-sm">
                + Custom
              </span>
            </div>
          </div>

        </div>

        <!-- RIGHT COLUMN: The "How" (Steps Cards) -->
        <div>
          <h3 class="text-2xl font-bold text-white mb-8 flex items-center gap-3">
            <span class="w-1.5 h-8 bg-gradient-to-b from-pink-500 to-orange-400 rounded-full"></span>
            How to crop a video online?
          </h3>

          <div class="space-y-4">
            {steps.map((item) => (
              <div class="group relative bg-[#131B2E] hover:bg-[#1A2339] border border-slate-800/60 p-5 rounded-2xl transition-all duration-300 flex gap-5 items-start">
                
                <!-- Number (Pink Style) -->
                <div class="shrink-0 w-10 h-10 rounded-lg bg-pink-500/10 text-pink-400 flex items-center justify-center font-bold text-sm border border-pink-500/20 mt-0.5 group-hover:bg-pink-500/20 transition-colors">
                  {item.step}
                </div>

                <!-- Text -->
                <div>
                  <h4 class="text-lg font-bold text-white mb-1 group-hover:text-pink-200 transition-colors">
                    {item.title}
                  </h4>
                  <p class="text-slate-400 text-sm leading-relaxed">
                    {item.desc}
                  </p>
                </div>

              </div>
            ))}
          </div>

          <!-- Action Button -->
          <div class="mt-8 text-right">
             <a href="/editor" class="inline-flex items-center gap-2 text-pink-400 font-bold hover:text-pink-300 transition-colors group">
                Start Cropping Now 
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
             </a>
          </div>

        </div>

      </div>
    </div>
  </div>

</MarketingLayout>